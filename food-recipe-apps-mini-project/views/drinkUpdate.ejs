      </div>
    </div>
  </nav>

      <div class="container-lg h-auto">
        <form action="/drinks/detail/update/<%= drink.id %>" method="post">
          <div class="form-group row">
            <label for="name" class="col-sm-2 col-form-label">Drink Name</label>
            <div class="col-sm-10">
              <input type="text" name="name" class="form-control" id="inputEmail3" value="<%= drink.name %>">
            </div>
          </div>
          <fieldset class="form-group">
            <div class="row">
              <legend class="col-form-label col-sm-2 pt-0">Drink Time</legend>
              <div class="col-sm-10">
                <div class="form-check">
                  <input class="form-check-input" type="radio" name="time" id="gridRadios1" value="Breakfast" checked>
                  <label class="form-check-label" for="time">
                    Breakfast
                  </label>
                </div>
                <div class="form-check">
                  <input class="form-check-input" type="radio" name="time" id="gridRadios2" value="Lunch">
                  <label class="form-check-label" for="time">
                    Lunch
                  </label>
                </div>
                <div class="form-check disabled">
                  <input class="form-check-input" type="radio" name="time" id="gridRadios3" value="Dinner" >
                  <label class="form-check-label" for="time">
                    Dinner
                  </label>
                </div>
              </div>
            </div>
          </fieldset>

          <div class="form-group col-md-4 food_kind">
            <label for="hot_or_cold">Hot/Cold</label>
            <select id="inputState" class="form-control" name="hot_or_cold">
                <option value="<%= drink.hot_or_cold %>"><%= drink.hot_or_cold %></option>
              <option value="Hot">Hot</option>
              <option value="Cold">Cold</option>
            </select>
              
            <div class="mb-3">
              <label for="exampleFormControlInput1" class="form-label">Number of People Serve</label>
              <input type="text" class="form-control" id="exampleFormControlInput1" name="people" value="<%= drink.people %>">
            </div>

          <div class="mb-3">
            <label for="Ingredients">Ingredients</label>
            <textarea class="form-control" id="validationTextarea" placeholder="Required example textarea" name="ingredients" required ><%= drink.ingredients %></textarea>
            </div>
        </div>
          <label for="steps">Steps</label>
          <textarea class="form-control" id="validationTextarea" placeholder="Required example textarea" name="steps" required><%= drink.steps %></textarea>
          </div>
        </div>

          <div class="form-group">
            <label for="image"> Insert Image URL </label>
            <input type="text" class="form-control" id="exampleInputEmail1" name="image" aria-describedby="emailHelp" value="<%= drink.image %>">
          </div>

          <div class="form-group row">
            <div class="col-sm-10">
              <button type="submit" class="btn btn-primary">Submit</button>
            </div>
          </div>
          <div class="mb-3">

      </form>

    </div>




<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
</body>
