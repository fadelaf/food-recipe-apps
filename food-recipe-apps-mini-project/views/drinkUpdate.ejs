        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="/foods">Food</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/drinks">Drink</a>
          </li>
          <!-- <li class="nav-item">
            <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Disabled</a>
          </li> -->
          <li class="nav-item">
            <a class="nav-link" href="/foodDrinkPair">Food Drink Pair</a>
          </li>
